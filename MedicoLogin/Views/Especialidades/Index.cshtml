@model IEnumerable<MedicoLogin.Models.Especialidade>

@{
    ViewBag.Title = "LISTAGEM DAS ESPECIALIDADES";
}

<h2>Index</h2>
@if (User.Identity.IsAuthenticated) { 
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @if (User.Identity.IsAuthenticated)
                {
                    @Html.ActionLink("Edit", "Edit", new { id = item.EspecialidadeID }) <span>|</span>
                    @Html.ActionLink("Details", "Details", new { id = item.EspecialidadeID }) <span>|</span>
                    @Html.ActionLink("Delete", "Delete", new { id = item.EspecialidadeID })
                }
            </td>
        </tr>
    }

</table>
